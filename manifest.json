{
  "manifest_version": 2,

  "author": "Talon Jones",
  "name": "JIRA Browser",
  "version": "1.0",
  "default_locale": "en",

  "description": "__MSG_appDesc__",

  "icons": {
    "128": "images/icon128.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_icon": "images/favicon.png",
    "default_popup": "html/popup.html",
    "default_title": "__MSG_defaultTitle__"
  },

  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "options_page": "html/options.html",

  "omnibox": {
    "keyword": "jira"
  },

  "permissions": ["activeTab", "identity", "contextMenus", "tabs", "storage", "notifications", "https://*/"],
  "update_url": "ttps://clients2.google.com/service/update2/crx"
}
